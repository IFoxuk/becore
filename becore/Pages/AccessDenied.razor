@page "/access-denied"

<PageTitle>Доступ запрещен</PageTitle>

<div class="hero is-fullheight">
    <div class="hero-body">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-6">
                    <div class="box has-text-centered">
                        <div class="content">
                            <div class="icon is-large has-text-danger">
                                <i class="fas fa-exclamation-triangle fa-3x"></i>
                            </div>
                            <h1 class="title">Доступ запрещен</h1>
                            <h2 class="subtitle">У вас нет прав для просмотра этой страницы</h2>
                            <p>
                                Возможно, вам нужно войти в систему или у вас недостаточно прав доступа.
                            </p>
                            <div class="buttons is-centered">
                                <a href="/login" class="button is-primary">
                                    <span class="icon">
                                        <i class="fas fa-sign-in-alt"></i>
                                    </span>
                                    <span>Войти</span>
                                </a>
                                <a href="/" class="button is-light">
                                    <span class="icon">
                                        <i class="fas fa-home"></i>
                                    </span>
                                    <span>На главную</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
